<div class="cont">
    <div class="titlearea">
        <div class="title">전체공지</div>
        <div class="nav">스토어관리 > 전체공지</div>
    </div>
    
    <div class="search_area">
        <table class="serach_box" cellpadding='0' cellspacing='0'>
            <tbody>
                <tr>
                    <th>등록일</th>
                     {{>date_search firstday=firstday startdate=q.startdate enddate=q.enddate}}
                    <td rowspan="3"><div class="serach_button" onclick="document.forms[0].submit()">검색하기</div></td>
                </tr>
                
                <tr>
                    <th>구분</th>
                    <td>
                       <div class="priod_box">
                            <select class="inputstyle" id="type_selector">
                                <option value="">선택안함</option>
                                <option value="title" {{ifselected q.title}}>제목</option>
                                <option value="content" {{ifselected q.content}}>내용</option>
                            </select>
                        </div>
                        
                        
                        <div class="input_80box">
                            <input type="text" class="inputstyle" name="" id="type" value="{{q.title}}{{q.content}}"></input>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <th>스토어주소</th>
                    <td  colspan="3">
                        <div class="mem_inputbox">
                            <input type="text" class="inputstyle" name="url" value="{{q.url}}"></input>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    
    
    <div class="list_all">
        <form method="POST">
        <div class="list_info">
            <div class="count">전체공지수 : {{noticesCount}}건</div>
            <ul class="message_button">
                <li class="lg_button" onclick="document.forms[1].submit()">전체삭제</li>
                <li class="wh_button" onclick="chooseAll(); document.forms[1].submit()">선택삭제</li>
            </ul>
        </div>
        
        <table cellpadding="0" cellspacing="0" class="list_table">
            <thead>
                <tr>
                    <th><input type="checkbox" onclick="chooseAll()"></input></th>
                    {{!-- <th>번호</th> --}}
                    <th>스토어주소</th>
                    <th>제목</th>
                    <th>내용</th>
                    <th>등록날짜</th>
                </tr>
            </thead>
            
            <tbody>
                {{#each notices}}
                <tr>
                    <th><input type="checkbox" name="checked" value={{this.id}} ></th>
                    {{!-- <th>10</th> --}}
                    <th>{{this.store.url}}</th>
                    <th><a href="/stores/notices/{{this.id}}">{{this.title}}</a></th>
                    <th><a href="/stores/notices/{{this.id}}">{{this.content}}</a></th>
                    <th>{{makeDate this.createdAt}}</th>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </form>
        
        {{>pages}}
    </div>
    
</div>