<div class="cont">
    <div class="titlearea">
        <div class="title">게시글 정보</div>
        <div class="nav">승인관리 > 스토어 관리 > 게시글 조회 > 상세</div>
    </div>
    
    <div class="search_area">
        <form method="GET">
        <table class="serach_box" cellpadding='0' cellspacing='0'>
            <tbody>
                <tr>
                    <th>등록일</th>
                     {{>date_search firstday=firstday startdate=q.startdate enddate=q.enddate}}
                    <td rowspan="3"><div class="serach_button" onclick="document.forms[0].submit()">검색하기</div></td>
                </tr>
                
                <tr>
                    <th>구분</th>
                    <td>
                       <div class="priod_box">
                            <select class="inputstyle" id="type_selector">
                                <option value="">선택안함</option>
                                <option value="title" {{ifselected q.title}}>제목</option>
                                <option value="content" {{ifselected q.content}}>내용</option>
                            </select>
                        </div>
                        
                        
                        <div class="input_80box">
                            <input type="text" class="inputstyle" name="" id="type" value="{{q.title}}{{q.content}}"></input>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <th>스토어주소</th>
                    <td>
                        <div class="input_100box">
                            <input type="text" class="inputstyle" name="url" value="{{q.url}}"></input>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
       
        </form>
    </div>
    
    
    
    
    
    
    <div class="list_all">
        <form method="POST">
        <div class="list_info">
            <div class="count">전체게시글수 : {{postsCount}}개</div>
            <ul class="message_button">
                <li class="lg_button" onclick="document.forms[1].submit()">선택삭제</li>
                <li class="wh_button" onclick="chooseAll(); document.forms[1].submit()">모두삭제</li>
                
            </ul>
        </div>
        
        <table cellpadding="0" cellspacing="0" class="list_table">
            <thead>
                <tr>
                    <th><input type="checkbox" onclick="chooseAll()" ></th>
                    {{!-- <th>번호</th> --}}
                    <th>스토어주소</th>
                    <th>제목</th>
                    <th>내용</th>
                    <th>작성자아이디</th>
                    <th>등록일자</th>
                </tr>
            </thead>
            
            <tbody>
                {{#each posts}}  
                <tr>
                    <th><input type="checkbox" name="checked" value={{this.id}} ></th>
                    {{!-- <th>1</th> --}}
                    <th><a href="/stores/posts/{{this.id}}">{{this.store.url}}</a></th>
                    <th><a href="/stores/posts/{{this.id}}">{{this.title}}</a></th>
                    <th><a href="/stores/posts/{{this.id}}">{{this.content}}</a></th>
                    <th>{{this.author.username}}</th>
                    <th>{{makeDate this.createdAt}}</th>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
        {{>pages}}
    </div>
</div>

















<h1>Posts Index</h1>

<form method="get">
    개설승인일시작: <input type="date" name="startdate"><br>
    개설승인일끝: <input type="date" name="enddate"><br>
    구분-제목: <input type="text" name="title" ><br>
    구분-내용: <input type="text" name="content" ><br>
    스토어주소: <input type="text" name="url" ><br>
    <input type="submit" value="제출"><br>
</form>

게시글 수: {{postsCount}}
<form method="POST" name="postsIndex"> 
    <input type="submit" value="삭제"><br>
    <input type="submit" onclick="chooseAll()" value="전체삭제"><br>

    {{#each posts}}    
        <input type="checkbox" name="checked" value={{this.id}} >
        <a href="/stores/posts/{{this.id}}">{{this.title}}</a>
        {{this.createdAt}}
        <br>
    {{/each}}
</form>

<a href="?page=1">1</a>
