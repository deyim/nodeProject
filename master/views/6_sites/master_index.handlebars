<div class="cont">
    <div class="titlearea">
        <div class="title">사이트관리</div>
        <div class="nav">사이트관리 > 관리자 조회</div>
    </div>

    <div class="list_all">
        <form method="post">
            <div class="list_info">
                <div class="count">전체관리자수 : {{masters.count}}명</div>
                <ul class="message_button">
                    <li class="lg_button"><a href="/sites/masters/add">관리자 추가하기</a></li>
                    <li class="wh_button" onclick="document.forms[0].submit()">선택삭제</li>
                </ul>
            </div>
            
            <table cellpadding="0" cellspacing="0" class="list_table">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="chooseAll()"></input></th>
                        {{!-- <th>번호</th> --}}
                        <th>아이디</th>
                        <th>관리자명</th>
                        <th>이메일</th>
                        <th>전화번호</th>
                        <th>권한</th>
                        <th>생성일자</th>
                        
                    </tr>
                </thead>
                
                <tbody>
                    {{#each masters.rows}}  
                    <tr>
                        <th><input type="checkbox"  name="checked" value={{this.id}}></input></th>
                        {{!-- <th>10</th> --}}
                        <th><a href="/sites/masters/{{this.id}}">{{this.user.username}}</a></th>
                        <th><a href="/sites/masters/{{this.id}}">{{this.name}}</a></th>
                        <th><a href="/sites/masters/{{this.id}}">{{this.user.email}}</a></th>
                        <th><a href="/sites/masters/{{this.id}}">{{this.user.phone}}</a></th>
                        <th>최고관리자</th>
                        <th>{{makeDate this.createdAt}}</th>
                    </tr>   
                    {{/each}}           
                </tbody>
            </table>
        </form>
        {{>pages}}
    </div>
</div>