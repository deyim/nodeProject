                <li onClick="adstore_delete();"><img src="/images/sub/minus_option.png"></li>
            </ul>
        </div>
        
        <div class="list_03banner">
            {{#each adstores}}
               <li><img src="{{this.imgPath}}"></li> 
            {{/each}}
        </div>
        
        
        
