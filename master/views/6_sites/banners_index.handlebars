<script>
    $(document).ready(function(){
        $('.adstory_create').hide();
        $('.adstore_create').hide();
        $('.adnewstore_create').hide();
        $('.adaffiliation_create').hide();
    })
    $('#adstory_select li').on('click',function(){
        var adstories = {{{json adstories}}};
        $('#adstory_select .on').removeClass();
        $(this).addClass("on");

        var i = $(this).text()-1;
        var imgSrc = adstories[i].imgPath
        $('.main_banner  img').attr('src', imgSrc);
    })

    $('#adstore_select li').on('click',function(){
        $('#adstore_select .on').removeClass();
        $(this).addClass("on");
    });

    $('#adnewstore_select li').on('click',function(){
        $('#adnewstore_select .on').removeClass();
        $(this).addClass("on");
    });

    $('#adaffiliation_select li').on('click',function(){
        var adaffiliations = {{{json adaffiliations}}};
        $('#adaffiliation_select .on').removeClass();
        $(this).addClass("on");

        var i = $(this).text()-1;
        var imgSrc = adaffiliations[i].imgPath
        $('.list_01banner  img').attr('src', imgSrc);
    })

    function adstory_add(){
        $('.adstory_create').show();
    };

    function adstory_delete(){
        var toDelete = $('#adstory_select .on').text()-1;
        window.location.replace(`/sites/banners/adstory/${toDelete}/delete`);
    };

    function adstore_add(){
        $('.adstore_create').show();
    };

    function adstore_delete(){
        var toDelete = $('#adstory_select .on').text()-1;
        window.location.replace(`/sites/banners/adstory/${toDelete}/delete`);
    };

    function adnewstore_add(){
        $('.adstory_create').show();
    };

    function adnewstore_delete(){
        var toDelete = $('#adstory_select .on').text()-1;
        window.location.replace(`/sites/banners/adstory/${toDelete}/delete`);
    };

    function adaffiliation_add(){
        $('.adaffiliation_create').show();
    };

    function adaffiliation_delete(){
        var toDelete = $('#adaffiliation_select .on').text()-1;
        window.location.replace(`/sites/banners/adaffiliation/${toDelete}/delete`);
    };

    $('.close').on('click',function(){
        $('.adstory_create').hide();
        $('.adstore_create').hide();
        $('.adnewstore_create').hide();
        $('.adaffiliation_create').hide();
    })
    
</script>