<h1>notices_index</h1>
<form action="">
    {{!-- <input type="text" name="code" list="codes"> --}}
    <select name="code">
        {{#each noticecodes}}
            <option value={{this.code}}>{{this.code}}</option> 
        {{/each}}
    </select>
    <select name="type">
        <option value="">선택안함</option>
        <option value="A">사용자</option>
        <option value="B">스토어</option>
    </select>
    <input type="submit", value="제출">
</form>

<a href="/sites/notices/add">공지사항 추가하기</a>

<form action="" method="POST">
    <input type="submit" value="선택 삭제"><br>
    {{#each notices}}    
        <input type="checkbox" name="checked" value={{this.id}} >
        <a href="/sites/notices/{{this.id}}">{{this.title}}</a>
        {{this.type}}
        {{this.createdAt}}<br>
    {{/each}}
</form>

