    <div class="list_all">
        <div class="search_title">
            <div class="title">정산상세내역</div>
        </div>
    
        <div class="list_info">
            <div class="count">조회된 정산수 : {{withdrawlsCount}}건</div>
        </div>
        
        <div class="tablearea">
            <table class="sales_table" cellpadding="0" cellspacing="0">
                <thead>
                    <tr>
                        {{!-- <th>번호</th> --}}
                        <th>스토어주소</th>
                        <th>일자</th>
                        <th>판매금액(A)</th>
                        <th>공제금액(B)</th>
                        <th>정산예정금액(A-B)</th>
                        <th>상세내역</th>
                    </tr>
                </thead>
                
                <tbody>
                    {{#each withdrawls}}
                    <tr>
                        {{!-- <th></th> --}}
                        <th>{{this.provider.store.url}}</th>
                        <th>{{makeDate this.createdAt}}</th>
                        <th>{{this.total}}</th>
                        <th>{{plusTwo this.totalPgCost this.totalStoreCost}}</th>
                        <th>{{minusTwo this.total this.totalPgCost this.totalStoreCost}}</th>
                        <th><div class="sales_view">보기</div></th>
                    </tr>



                    {{/each}}
                </tbody>
            </table>
