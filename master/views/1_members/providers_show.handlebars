<script>

    $(document).ready(function(){
        var type = $('#rateType').val();
        $("input[value="+type+"]").prop("checked",true);
        if (type == 'B'  ) {
            $('#monthRateInput').show();
            $('#monthFeeInput').hide();
        }
        else if (type == 'A') {
            $('#monthRateInput').hide();
            $('#monthFeeInput').show();
        }
        else {
            $('#monthRateInput').show();
            $('#monthFeeInput').show();
        }
    });

    $(document).ready(function(){   
        $(document).on('change',$('input:radio:checked'),function () {
            if ($("input[name='rateType']:checked").val() == 'B'  ) {
                $('#monthRateInput').show();
                $('#monthFeeInput').hide();
            }
            else if ($("input[name='rateType']:checked").val() == 'A') {
                $('#monthRateInput').hide();
                $('#monthFeeInput').show();
            }
            else {
                $('#monthRateInput').show();
                $('#monthFeeInput').show();
            }
        });
    });

</script>
