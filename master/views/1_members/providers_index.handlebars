<div class="cont">
    <div class="titlearea">
        <div class="title">스토어회원</div>
        <div class="nav">회원관리 > 스토어회원</div>
    </div>
    
    <div class="search_area">
        <table class="serach_box" cellpadding='0' cellspacing='0'>
            <tbody>
                <tr>
                    <th>개설승인일</th>
                    <td colspan="3">
                        <div class="calendar_box"><input type="date" name="startdate"><span><img src="/images/sub/calendar.jpg"></span></div>
                        <div>-</div>
                        <div class="calendar_box"><input type="date" name="enddate"><span><img src="/images/sub/calendar.jpg"></span></div>
                        <div class="priod_box">
                            <select class="inputstyle">
                                <option>전체기간</option>
                                <option>1개월</option>
                                <option>2개월</option>
                                <option>3개월</option>
                                <option>4개월</option>
                            </select>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <th>아이디</th>
                    <td>
                        <div class="mem_inputbox">
                            <input type="text" name="username" class="inputstyle"></input>
                        </div>
                    </td>
                    
                    <th>닉네임</th>
                    <td>
                        <div class="mem_inputbox">
                            <input type="text" name="nickname" class="inputstyle"></input>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <th>사업자명</th>
                    <td>
                        <div class="mem_inputbox">
                            <input type="text" name="companyName" class="inputstyle"></input>
                        </div>
                    </td>
                    
                    <th>회원유형</th>
                    <td>
                        <div class="mem_inputbox">
                            <select type="text" name="companyType" class="inputstyle">
                                <option>전체회원</option>
                            </select>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        
        <div class="serach_button">검색하기</div>
    </div>
    
    
    <div class="list_all">
        <form action="POST">
        <div class="list_info">
            <div class="count">전체회원수 :{{membersCnt}}3명 </div> 
            {{!-- · 메일링수신 : 23명 · SMS수신 : 14명 --}}
            <ul class="message_button">
                <li class="lg_button"><input type="submit" onclick="chooseAll()" value="전체회원 쪽지발송"></li>
                <li class="wh_button"><input type="submit" value="선택회원 쪽지발송"></li>
            </ul>
        </div>
        
        <table cellpadding="0" cellspacing="0" class="list_table">
            <thead>
                <tr>
                    <th><input type="checkbox"></input></th>
                    <th>번호</th>
                    <th>회원유형</th>
                    <th>아이디</th>
                    <th>닉네임</th>
                    <th>사업자명</th>
                    <th>개설 승인일자</th>
                </tr>
            </thead>
            
            <tbody>
                {{#each providers}}
                <tr>
                    <th><input name="checked" value={{this.id}} type="checkbox"></input></th>
                    <th>10</th>
                    <th>{{this.companyType}}</th>
                    <th>{{this.email}}</th>
                    <th>{{this.url}}</th>
                    <th><a href="providers/{{this.id}}">{{this.companyName}}</a></th>
                    <th>{{this.createdAt}}</th>
                </tr>   
                {{/each}}             
            </tbody>
        </table>
        </form>
        
        {{>pages}}
    </div>
    
</div>

<script>
    function chooseAll() {
        checkboxes = document.getElementsByName('checked');
        for(i=0; i < checkboxes.length; i++) {
            checkboxes[i].checked = true;
        }
    }
</script>