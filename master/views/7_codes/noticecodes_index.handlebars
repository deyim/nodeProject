    </div>
    
    <div class="member_view">
        <table cellpadding="0" cellspacing="0" class="de_table">
            <tbody>
                {{#each codes}}
                <tr>
                    <th>코드값</th>
                    <td>
                        <div class="input_25box">
                            {{this.code}}
                            {{!-- <input type="text" class="inputstyle" value={{this.code}}></input> --}}
                        </div>
                        
                        
                        <div class="inline dg_button"><a href="/codes/notices/delete/{{this.id}}">삭제</a></div>
                        
                    </td>
                </tr>
                {{/each}}  
                <tr>
                    <th>코드값</th>
                    <td>
                        <form action="/codes/notices/generate" method="post">
                            <div class="input_25box">
                                <input type="text" class="inputstyle" name="code"></input>
                            </div>  
                            <div class="inline serach_button" onclick="document.forms[0].submit()">생성하기</div>                 
                        </form>
                    </td>
                </tr>                          
            </tbody>
        </table>
    </div>
