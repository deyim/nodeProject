<link rel="stylesheet" type="text/css" href="/css/master_main.css" /> 
<div class="cont">
	<div class="titlearea">
		<div class="title">DASHBOARD</div>
	</div>
	
	<ul class="main_sec01">
		<li>
			<div class="icon"><img src="/images/sec01_icon01.png"></div>
			<div class="title">결제건수</div>
			<div class="num">{{newOrders}}</div>
		</li>
		
		<li>
			<div class="icon"><img src="/images/sec01_icon02.png"></div>
			<div class="title">입금요청</div>
			<div class="num">280</div>
		</li>
	</ul>
	
	<div class="main_sec02">
		<div class="box">
			<div class="title">주문처리현황</div>
			
			<ul class="list">
				<li>
					<div class="cont_name">입금확인중</div>
					<div class="cont_number"><span>{{ordered}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">신규주문</div>
					<div class="cont_number"><span>{{paid}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">취소주문</div>
					<div class="cont_number"><span>{{canceled}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">서비스이용중</div>
					<div class="cont_number"><span>{{used}}</span>건</div>
				</li>
			</ul>
		</div>
		
		<div class="box">
			<div class="title">매출정산관리</div>
			
			<ul class="list">
				<li>
					<div class="cont_name">전체매출건수</div>
					<div class="cont_number"><span>02</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">정산완료건수</div>
					<div class="cont_number"><span>03</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">입근신청건수</div>
					<div class="cont_number"><span>04</span>건</div>
				</li>
				
				
			</ul>
		</div>
		
		<div class="box">
			<div class="title">스토어현황</div>
			
			<ul class="list">
				<li>
					<div class="cont_name">전체스토어</div>
					<div class="cont_number"><span>{{stores}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">신규승인요청</div>
					<div class="cont_number"><span>{{prestores}}</span>건</div>
				</li>
				
			</ul>
		</div>
		
		<div class="box">
			<div class="title">회원현황</div>
			
			<ul class="list">
				<li>
					<div class="cont_name">전체회원</div>
					<div class="cont_number"><span>{{users}}</span>명</div>
				</li>
				
				<li>
					<div class="cont_name">신규가입</div>
					<div class="cont_number"><span>{{newUsers}}</span>명</div>
				</li>
				
				<li>
					<div class="cont_name">휴먼회원</div>
					<div class="cont_number"><span>0</span>명</div>
				</li>
				
				
			</ul>
		</div>
	</div>
	
	
	<div class="main_sec03">
		<div class="infoarea">
			<div class="month">
				<select class="inputstyle">
					<option>DAILY</option>
					<option>MONTHLY</option>
				</select>
			</div>
		</div>
		
		<div class="graph_box">
			<ul class="circle_area">
				<li>
					
					<div class="textarea">
						<div class="title">방문자수</div>
						<div class="number">{{visitings}}</div>
					</div>
				</li>
				
				<li>
					
					<div class="textarea">
						<div class="title">상품조회</div>
						<div class="number">{{views}}</div>
					</div>
				</li>
			</ul>
			
			{{!-- <div class="bar_graph">
				<img src="/images/graph03.png">
			</div> --}}
			<div class="list_all">            
				<table cellpadding="0" cellspacing="0" class="list_table">
					<thead>
						<tr>
							<th></th>
							<th>번호</th>
							<th>월</th>
							<th>방문자수</th>
							<th>상품조회</th>
						</tr>
					</thead>
					
					<tbody>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th>{{visitings}}</th>
							<th>{{views}}</th>
						</tr>
					</tbody>
				</table>
     
				</div>
			</div>
		</div>
	
	<div class="main_sec04">
		<div class="board_box">
			<div class="titlearea">
				<div class="boardtitle">스토어공지</div>
				<div class="more"><a href="/sites/notices">더보기 +</a></div>
			</div>
			
			<ul class="list">
				
				{{#each notices}}
				<li>
					<div class="board_name">{{typeChk this.type}}공지</div>
					<div class="board_title"><a href="/sites/notices/{{this.id}}">{{this.title}}</a></div>
					<div class="board_date">{{makeDate this.createdAt}}</div>
				</li>
				{{/each}}
			</ul>
		</div>
		
		<div class="board_box">
			<div class="titlearea">
				<div class="boardtitle">faq</div>
				<div class="more"><a href="/sites/faqs">더보기 +</a></div>
			</div>
			<ul class="list">
				{{#each faqs}}
				<li>
					<div class="board_name">{{typeChk this.type}} FAQ</div>
					<div class="board_cate">{{this.faqcode.code}}</div>
					<div class="board_title"><a href="/sites/faqs/{{this.id}}">{{this.title}}</a></div>
					<div class="board_date">{{makeDate this.createdAt}}</div>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>