<div class="cont">
    <div class="titlearea">
        <div class="title">회원조회</div>
        <div class="nav">회원관리 > 회원조회</div>
    </div>
    
    <div class="search_area">
        <form method="get">
            <table class="serach_box" cellpadding='0' cellspacing='0'>
                <tbody>
                    <tr>
                        <th>회원가입일</th>
                            {{>date_search firstday=firstday startdate=q.startdate enddate=q.enddate}}
                        <td rowspan="3"><div class="serach_button" onclick="document.forms[0].submit()">검색하기</div></td>
                    </tr>
                    
                    <tr>
                        <th>아이디</th>
                        <td>
                            <div class="mem_inputbox">
                                <input type="text" name="username" class="inputstyle"  value="{{q.username}}"></input>
                            </div>
                        </td>
                        
                        <th>닉네임</th>
                        <td>
                            <div class="mem_inputbox">
                                <input type="text" name="nickname" class="inputstyle" value="{{q.nickname}}"></input>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
    
        </form>
    </div>
    
    
    <div class="list_all">
        <form method="POST">
        <div class="list_info">
            <div class="count">전체회원수 : {{usersCount}}명</div>
            <ul class="message_button">
                <li class="lg_button message_write" onclick="chooseAll()">전체회원 쪽지발송</li>
                <li class="wh_button message_write">선택회원 쪽지발송</li>
            </ul>
        </div>
        
        
            <table cellpadding="0" cellspacing="0" class="list_table">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="chooseAll()"></input></th>
                        {{!-- <th>번호</th> --}}
                        <th>아이디</th>
                        <th>닉네임</th>
                        <th>주문횟수</th>
                        <th>가입일자</th>
                    </tr>
                </thead>
                
                <tbody>
                        {{#each users}}
                    <tr>                               
                        <th> <input type="checkbox" name="checked" value={{this.id}} ></th>
                        {{!-- <th>10</th> --}}
                        <th>{{this.username}}</th>
                        <th> <a href="/members/users/{{this.id}}">{{this.nickname}}</a></th>
                        <th>{{storeOrderCnt this.stores}}</th>
                        <th>{{storeCreatedAt this.stores}}</th>                         
                    </tr>
                    {{/each}}                                                    
                </tbody>
            </table>

        <div class="message_window" style="display:none;">
            <div class="layer_back_area"></div>
            <div class="layer_area">
                <div class="showbox">
                    <div class="showbox_cetearea">
                        <div class="title">쪽지</div>
                        <div class="close"><img src="/images/sub/showbox_close.png"></div>
                    </div>
                
                
                    <div class="showbox_contents">
                        발송자: {{store.url}}<br>
                        내용: <br>
                        <div class="mar_t10">
                             <textarea name="content" rows="10" cols="142"></textarea>
                        </div>
                       
                        <div class="bot_button">
                            <div class="inline_dg_button" onclick="document.forms[1].submit()">보내기</div>
                        </div>
                    </div>
                </div>
            </div>            
            
        </div>
        </form>
        {{>pages}}
    </div>
    
</div>