<link rel="stylesheet" type="text/css" href="/css/admin_main.css" />
<div class="cont">
	<div class="titlearea">
		<div class="title">DASHBOARD</div>
	</div>
		
	<ul class="main_sec01">
		<li>
			<div class="icon"><img src="./images/sec01_icon01.png"></div>
			<div class="title"><a href="/sales/all">결제건수</a> </div>
			<div class="num">{{newOrders}}</div>
		</li>
		
		<li>
			<div class="icon"><img src="./images/sec01_icon02.png"></div>
			<div class="title"><a href="/sales/all">결제금액</a></div>
			<div class="num">{{newSales}}</div>
		</li>
		
		<li>
			<div class="icon"><img src="./images/sec01_icon03.png"></div>
			<div class="title"><a href="/orders/canceled">취소/환불요청</a></div>
			<div class="num"><a href="/orders/canceled">{{newCanceled}}</a> </div>
		</li>
		
		<li>
			<div class="icon"><img src="./images/sec01_icon04.png"></div>
			<div class="title"><a href="/orders/canceled">취소/환불금액</a></div>
			<div class="num">{{newCancelSales}}</div>
		</li>
	</ul>
	
	<div class="main_sec02">
		<div class="box">
			<div class="title">주문처리현황01</div>
			
			<ul class="list">
				<li>
					<div class="cont_name"><a href="/orders/ordered">입금확인중</a></div>
					<div class="cont_number"><span>{{ordered}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name"><a href="/orders/paid">신규주문</a></div>
					<div class="cont_number"><span>{{paid}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name"><a href="/orders/placed">발주확인</a></div>
					<div class="cont_number"><span>{{canceled}}</span>건</div>
				</li>
			</ul>
		</div>
		
		<div class="box">
			<div class="title">주문처리현황02</div>
			
			<ul class="list">
				<li>
					<div class="cont_name"><a href="/orders/used">서비스이용중</a></div>
					<div class="cont_number"><span>{{used}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name"><a href="/orders/final">구매확정</a></div>
					<div class="cont_number"><span>{{final}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name"><a href="/orders/canceled">취소/환불</a></div>
					<div class="cont_number"><span>{{canceled}}</span>건</div>
				</li>
			</ul>
		</div>
		
		<div class="box">
			<div class="title">회원현황</div>
			
			<ul class="list">
				<li>
					<div class="cont_name"><a href="/members/users">전체회원</a></div>
					<div class="cont_number"><span>{{users}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">신규가입</div>
					<div class="cont_number"><span>{{newUsers}}</span>건</div>
				</li>
				
				<li>
					<div class="cont_name">탈퇴회원</div>
					<div class="cont_number"><span>{{droppedUsers}}</span>건</div>
				</li>
			</ul>
		</div>
	</div>
	
	
	<div class="main_sec03">
		<div class="infoarea">
			<div class="month">
				<select class="inputstyle">
					<option>DAILY</option>
					<option>MONTHLY</option>
				</select>
			</div>
		</div>
		
		<div class="graph_box">
			<ul class="circle_area">
				<li>
					<div class="textarea">
						<div class="title">방문자수</div>
						<div class="number">{{visitings}}</div>
					</div>
				</li>
				
				<li>
					<div class="textarea">
						<div class="title">상품조회</div>
						<div class="number">{{views}}</div>
					</div>
				</li>
			</ul>
			
			{{!-- <div class="bar_graph">
				<img src="./images/graph03.png">
			</div> --}}
		</div>
	</div>

	<div class="main_sec04">
		<div class="board_box">
			<div class="titlearea">
				<div class="boardtitle">스토어공지</div>
				<div class="more"><a href="/sites/notices">더보기 +</a></div>
			</div>
			
			<ul class="list">
				
				{{#each notices}}
				<li>
					<div class="board_name">{{typeChk this.type}}공지</div>
					<div class="board_title"><a href="/sites/notices/{{this.id}}">{{this.title}}</a></div>
					<div class="board_date">{{makeDate this.createdAt}}</div>
				</li>
				{{/each}}
			</ul>
		</div>
		
		<div class="board_box">
			<div class="titlearea">
				<div class="boardtitle">faq</div>
				<div class="more"><a href="/sites/faqs">더보기 +</a></div>
			</div>
			<ul class="list">
				{{#each faqs}}
				<li>
					<div class="board_name">{{typeChk this.type}} FAQ</div>
					<div class="board_cate">{{this.faqcode.code}}</div>
					<div class="board_title"><a href="/sites/faqs/{{this.id}}">{{this.title}}</a></div>
					<div class="board_date">{{makeDate this.createdAt}}</div>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>